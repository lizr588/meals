<p id="notice"><%= notice %></p>

<div class="container">

<h1>Categories</h1>
<%= link_to 'New Category', new_category_path, class: "btn btn-success btn-xs" %>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Show', category, class: "btn btn-success btn-xs" %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class: "btn btn-warning btn-xs" %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
