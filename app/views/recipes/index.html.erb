<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Vegetarian</th>
      <th>Amount</th>
      <th>Unit</th>
      <th>Ingredient</th>
      <th>Tried</th>
      <th>Rating</th>
      <th>Meal prep</th>
      <th>Notes</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.category_id %></td>
        <td><%= recipe.vegetarian %></td>
        <td><%= recipe.amount %></td>
        <td><%= recipe.unit %></td>
        <td><%= recipe.ingredient_id %></td>
        <td><%= recipe.tried %></td>
        <td><%= recipe.rating %></td>
        <td><%= recipe.meal_prep %></td>
        <td><%= recipe.notes %></td>
        <td><%= recipe.link %></td>
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>
