<div class="row">
  <div class="col">
    <h1>Ingredients</h1>
    <% @ingredients.each do |ingredient| %>
      <p><%= link_to ingredient.name, ingredient %></p>
    <% end %>
  </div>

  <div class="col">
    <h1>Recipes</h1>
    <% @recipes.each do |recipe| %>
      <p><%= link_to recipe.name, recipe %></p>
    <% end %>
  </div>

    <div class="col">
      <h1>Categories</h1>
      <% @categories.each do |category| %>
        <p><%= link_to category.name, category %></p>
      <% end %>
    </div>
</div>
